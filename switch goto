#include <stdio.h>

int main()
{
    float x,y;
    int ch;
    printf("enter the values:");
    scanf("%f%f",&x,&y);
    printf("enter your own choice:");
    scanf("%d",&ch);
    switch(ch)
    {
  case 0:
  printf("%0.1f",x+y);
  break;
  case 1:
  printf("%0.1f",x-y);
  break;
  case 2:
  printf("%0.1f",x*y);
  break;
    case 3:
  goto y;
  break;
y: printf("%0.1f",x*y);
  }

    return 0;
}
